		}
		if (tam_fonte> minima ) {
			$tags("p")[i].style.fontSize = (tam_fonte - 1) + "px"
		}
	}
	for (j=0;j<7;j++) {
		for (i=0; i<$tags("h"+j).length;i++) {
			if ($tags("h"+j)[i].style.fontSize=="") {
				tam_fonte = inicial
			} else {
				tam_fonte= parseInt($tags("h"+j)[i].style.fontSize)
			}
			if (tam_fonte >minima ) {
